{{#> layouts/_base}}

{{#*inline "title"}}
  {{#if title}}
    {{title}}
  {{else}}
    FAQ
  {{/if}}
{{/inline}}

{{#*inline "styles"}}
{{/inline}}

{{#*inline "body"}}
<div class="container py-3 exts-mt-16">
  <div class="row">
    <div class="col-12 col-lg-6 d-flex flex-column">
      <h1 class="text-6xl-xl text-4xl-lg text-3xl-md text-2xl font-black text-light">Frequently Asked Questions</h1>
      <h5>
        You have your concerns? Here are our most frequently asked questions.
      </h5>

      <h6 class="text-muted mt-auto"><em>Not find what you want&quest; Try using our search tool.</em></h6>
      <form class="position-relative exts-mt-2 mb-5 mb-md-0">
        <input id="searchInpput" type="text" class="form-control exts-pl-20 exts-py-6" placeholder="Search for a question">

        <button id="searchButton" type="submit" class="btn btn-primary position-absolute top-0 start-0 bottom-0" style="width: 74px">
          <i class="bi bi-search"></i>
        </button>
      </form>
    </div>
    <div class="col-12 col-lg-6">
      <div class="w-100 rounded-2">
        <img class="w-100 h-auto rounded-2" src="https://plus.unsplash.com/premium_photo-1733317483746-661d5384329c?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="FAQ">
      </div>
    </div>
  </div>

  <div id="faqAccordion">

  </div>
</div>
{{/inline}}

{{#*inline "scripts"}}
  <script src="/js/home.js"></script>
{{/inline}}

{{/layouts/_base}}


