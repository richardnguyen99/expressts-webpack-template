{{#> layouts/_base}}

{{#*inline "title"}}
  {{#if title}}
    {{title}}
  {{else}}
    FAQ
  {{/if}}
{{/inline}}

{{#*inline "styles"}}
<link rel="stylesheet" href="{{manifest 'faqStyles.css'}}">
{{/inline}}

{{#*inline "body"}}
<div class="container py-3 mt-4">
  <div class="faq__hero row">
    <div class="faq__start col-12 col-lg-6 d-flex flex-column">
      <h1 class="faq__title">Frequently Asked Questions</h1>
      <h5 class="faq__sub-title">
        You have your concerns? Here are our most frequently asked questions.
      </h5>

      <h6 class="faq__footer text-muted"><em>Not find what you want&quest; Try using our search tool.</em></h6>
      <form class="faq__form position-relative mb-5 mb-md-0">
        <input
          id="searchInpput"
          type="text"
          class="form-control pl-5"
          placeholder="Search for a question"
          autocomplete="off"
        >

        <button
          id="searchButton"
          type="submit"
          class="btn btn-primary position-absolute top-0 start-0 bottom-0"
        >
          <i class="bi bi-search"></i>
        </button>
      </form>
    </div>
    <div class="faq__end col-12 col-lg-6">
      <div class="faq__landing w-100 rounded-2">
        <img
          class="w-100 h-auto rounded-2"
          src="https://plus.unsplash.com/premium_photo-1733317483746-661d5384329c?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="FAQ"
        >
      </div>
    </div>
  </div>

  <div id="faqAccordion" class="faq__list accordion mt-4">
    {{#each faqs as |faq|}}
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#question{{@index}}"
            aria-expanded="false"
            aria-controls="question{{@index}}"
          >
            {{{faq.question}}}
          </button>
        </h2>
        <div
          id="question{{@index}}"
          class="accordion-collapse collapse"
          data-bs-parent="#faqAccordion"
        >
          <div class="accordion-body">
            {{{faq.answer}}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
{{/inline}}

{{#*inline "scripts"}}
{{/inline}}

{{/layouts/_base}}


