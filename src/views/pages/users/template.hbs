{{#> layouts/_base}}

{{#*inline "title"}}
  {{#if title}}
    {{title}}
  {{else}}
    Users
  {{/if}}
{{/inline}}

{{#*inline "styles"}}
{{/inline}}

{{#*inline "body"}}
<section class="pt-5">
  <div class="container">
    <div class="row">
      <div data-component="user-sidebar" class="col-lg-4 col-xl-3">
        <div class="offcanvas-lg offcanvas-start h-100" tabindex="-1" id="offcanvasSidebar">
          <div class="offcanvas-header">
            <h3 id="offcanvasNavbarLabel">Users</h3>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasSidebar" aria-label="Close"></button>
          </div>

          <div class="offcanvas-body p-0">
            <div class="card border p-0 w-100">
              <div class="card-header d-flex flex-column gap-3 align-items-center border-bottom bg-body">
                <div class="user__avatar position-relative my-2">
                  <img
                    class="rounded-circle border border-2 border-secondary"
                    src="{{user.profile.avatar}}"
                    alt="{{fullname user.profile.firstName user.profile.lastName}}"
                  />
                </div>

                <h6 class="mb-0">{{fullname user.profile.firstName user.profile.lastName}}</h6>

                <a href="#" class="text-reset text-primary-hover small mt-n3">{{user.email}}</a>
              </div>

              <div class="card-body p-2 mt-4">
                <ul class="nav nav-pills flex-column gap-2">
                  <li class="nav-item">
                    <a href="#" class="nav-link active">
                      <i class="bi bi-person"></i>
                      Profile
                    </a>
                  </li>

                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <i class="bi bi-phone"></i>
                      Devices
                    </a>
                  </li>

                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <i class="bi bi-bell"></i>
                      Notifications
                    </a>
                  </li>

                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <i class="bi bi-file-earmark-text"></i>
                      Posts
                    </a>
                  </li>

                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <i class="bi bi-chat"></i>
                      Comments
                    </a>
                  </li>

                  <li class="nav-item">
                    <a href="#" class="nav-link">
                      <i class="bi bi-trash"></i>
                      Delete Account
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div data-component="user-content" class="col-lg-8 col-xl-9">
        Something
      </div>
    </div>
  </div>
</section>
{{/inline}}

{{#*inline "scripts"}}
{{/inline}}

{{/layouts/_base}}

