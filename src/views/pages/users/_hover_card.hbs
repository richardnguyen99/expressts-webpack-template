<div class="card" data-user="{{ user.userId }}" style="width: 360px">
  <div class="card-header text-nowrap d-flex">
    {{ user.profile.job }}
  </div>

  <div class="card-body">
    <div
      class="rounded-circle object-fit-cover"
      style="width: 40px; height: 40px"
    >
      <img
        class="rounded-circle object-fit-cover w-100 h-100"
        src="{{ user.profile.avatar }}"
        alt="{{fullname user.profile.firstName user.profile.lastName}}"
      />
    </div>
    <div class="card-text mt-2">
      <p class="mb-0">
        <a
          class="text-reset text-decoration-none"
          href="/users/{{ user.userId }}"
          ><strong>{{ user.username }}</strong></a
        >
        <span class="text-muted">{{fullname
            user.profile.firstName
            user.profile.lastName
        }}</span>
      </p>

      <p class="mb-0">
        <i class="bi bi-at"></i>
        <span>{{ user.email }}</span>
      </p>

      <p class="mb-0">
        <i class="bi bi-phone"></i>
        <span>{{ user.profile.phone }}</span>
      </p>

      <p>
        <i class="bi bi-geo-alt"></i>
        <span>{{ user.profile.address }}</span>
      </p>

      <p class="mb-0 line-clamp-3 text-muted small">
        {{ user.profile.bio }}
      </p>
    </div>
  </div>
</div>
