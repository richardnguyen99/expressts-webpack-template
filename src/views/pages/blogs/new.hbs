{{#> layouts/_blog}}

{{#*inline "title"}}
New blog
{{/inline}}

{{#*inline "body"}}
<div class="container my-5">
  <h1>Set up Handlebars</h1>

  <form action="/blogs/new" method="POST" class="d-flex flex-column gap-4">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea name="content" id="content" class="form-control form-textarea"  required></textarea>
    </div>

    <div class="d-flex justify-content-end gap-2">
      <button type="submit" class="btn btn-primary">Create</button>
      <button class="btn btn-outline-warning">Clear</button>
    </div>

  </form>
</div>
{{/inline}}

{{/layouts/_blog}}

