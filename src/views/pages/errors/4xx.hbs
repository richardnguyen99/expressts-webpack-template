{{#> layouts/_base}}

{{#*inline "title"}}
  {{#if title}}
    {{title}}
  {{else}}
    Bad Request
  {{/if}}
{{/inline}}

{{#*inline "styles"}}
{{/inline}}

{{#*inline "body"}}
<div class="container py-3">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="text-center">
        <h1 class="display-1 text-danger fw-bold">{{statusCode}}</h1>
        <h2 class="display-2 fw-semibold">{{title}}</h2>
        <p>
          {{{message}}}
        </p>

        <p>
          If you believe this is a mistake, please <a href="mailto:" class="text-primary">contact us</a>.
        </p>
      </div>
    </div>
  </div>
</div>
{{/inline}}

{{#*inline "scripts"}}
{{/inline}}

{{/layouts/_base}}


