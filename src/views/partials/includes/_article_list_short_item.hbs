<a
  class="article-list-short-item d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top"
  href="/blogs/{{post.slug}}"
>
  <div class="article-list-short-item__thumbnail col-12 col-lg-4">
    <img
      src="{{post.thumbnail}}"
      alt="{{post.title}} thumbnail"
      width="100%"
      height="100%"
      class="bd-placeholder-img"></img>
  </div>
  <div class="col-12 col-lg-8">
    <h6 class="article-list-short-item__title mb-0">{{post.title}}</h6>
    <small
      class="article-list-short-item__date text-body-secondary"
    >{{date "medium" post.createdAt}}</small>
  </div>
</a>
