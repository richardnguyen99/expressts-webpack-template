<div class="user__mobile-pagination d-flex d-sm-none justify-content-center gap-2">
  {{#if (eq currentPage 1)}}
  <span class="btn btn-secondary disabled">Prev</span>
  {{else}}
  <a class="btn btn-primary" href="?page={{sub currentPage 1}}">Prev</a>
  {{/if}}

  <form class="position-relative" method="GET" action="">
    <input type="text" maxlength="3" value="{{currentPage}}" name="page" class="form-control w-100 d-inline-block">
    <div class="position-absolute top-0 end-0" style="margin-top: 0.375rem; margin-right: 0.75rem;">
      / {{totalPages}}
    </div>
  </form>

  {{#if (eq currentPage totalPages)}}
  <span class="btn btn-secondary disabled">Next</span>
  {{else}}
  <a class="btn btn-primary" href="?page={{add currentPage 1}}">Next</a>
  {{/if}}
</div>
