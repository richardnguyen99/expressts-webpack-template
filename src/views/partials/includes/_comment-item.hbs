<div
  class="comment-item"
  data-comment-id="{{comment.commentId}}"
  data-parent-url="{{url}}"
>
  <div class="comment-item__avatar">
    <a
      href="/users/{{comment.userId}}"
      data-hover-card-url="/users/{{comment.userId}}/hover-card"
    >
      <img
        src="{{comment.profile.avatar}}"
        alt="{{fullname
          comment.profile.firstName
          comment.profile.lastName
        }}"
      />
    </a>
  </div>

  <div class="comment-item__content">
    <div
      class="comment-item__content__container"
      id="comment-{{comment.commentId}}"
    >
      <div class="comment-item__content__header">
        <a
          href="/users/{{comment.userId}}"
          class="comment-item__content__header__author"
        >{{fullname
            comment.profile.firstName
            comment.profile.lastName
          }}</a>
        <div
          class="comment-item__content__header__date d-flex align-items-center"
        >
          <span>{{date "long" comment.createdAt}}</span>
          <a
            href="{{url}}#comment-{{comment.commentId}}"
            title="Get permalink to this comment"
          >
            <i class="bi bi-hash"></i>
          </a>
        </div>
      </div>

      <div class="comment-item__content__body">
        <p>{{{comment.content}}}</p>
      </div>
    </div>
  </div>
</div>
