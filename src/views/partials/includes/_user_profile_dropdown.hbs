<div class="dropdown">
  <button
    type="button"
    id="dropdownUser"
    data-bs-toggle="dropdown"
    aria-expanded="false"
    class="btn d-flex align-items-center text-decoration-none dropdown-toggle border-0"
  >
    <img
      src="{{sessionUser.profile.avatar}}"
      alt="Avatar of {{fullname sessionUser.profile.firstName sessionUser.profile.lastName}}"
      width="32"
      height="32"
      class="rounded-circle me-2"
    >
  </button>

  <ul
    class="dropdown-menu dropdown-menu-lg-end text-small shadow mt-3 mt-lg-0"
    aria-labelledby="dropdownUser"
  >
    <li>
      <p class="dropdown-header">
        Signed in as <strong>{{sessionUser.username}}</strong>
      </p>
    </li>

    <li>
      <hr class="dropdown-divider">
    </li>

    <li>
      <a
        class="dropdown-item"
        href="/users/{{sessionUser.userId}}/profile"
      >
        My Profile
      </a>
    </li>

    <li>
      <a
        class="dropdown-item"
        href="/users/{{sessionUser.userId}}/posts"
      >
        My Posts
      </a>
    </li>

    <li>
      <a
        class="dropdown-item"
        href="/users/{{sessionUser.userId}}/notifications"
      >
        My Notifications
      </a>
    </li>

    <li>
      <hr class="dropdown-divider">
    </li>

    <li>
      <a class="dropdown-item" href="/logout">Sign out</a>
    </li>
  </ul>
</div>
