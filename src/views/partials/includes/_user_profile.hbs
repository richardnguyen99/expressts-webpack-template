<div class="d-flex justify-content-between align-items-center mb-5 lg:exts-mb-6">
  <h3 class="h3 mb-0">My Profile</h3>
  <button class="btn btn-primary btn-sm d-flex align-items-center gap-2 d-lg-none flex-shrink-0 ms-2 bg-info"  type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
    <i class="bi bi-box-arrow-right"></i>
    <span>Show Sidebar</span>
  </button>
</div>

<form>
  <div class="card bg-transparent p-3 rounded-2 bg-body-tertiary">
    <div class="card-header bg-transparent border-bottom p-0 pb-3">
      <h6 class="mb-0">Personal information</h6>
    </div>

    <div class="card-body px-0">
      <div class="row g-3">
        <div class="col-12 mb-3">
          <div class="input-group">
            <div class="form-floating">
              <input type="text" class="form-control" id="firstNameInput" placeholder="First name" value="{{user.profile.firstName}}">
              <label for="firstNameInput">First Name</label>
            </div>
            <div class="form-floating">
              <input type="text" class="form-control" id="lastNameInput" placeholder="Last name" value="{{user.profile.lastName}}">
              <label for="lastNameInput">Last Name</label>
            </div>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <input type="email" class="form-control" id="emailInput" placeholder="Email" value="{{user.email}}">
            <label for="emailInput">Email</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <input type="text" class="form-control" id="dobInput" placeholder="Date of Birth" value="{{date "short" user.profile.dateOfBirth}}">
            <label for="dobInput">Date of Birth</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <select class="form-select" id="nationalitySelect" aria-label="Select your nationality">
              <option value="{{user.profile.country}}" selected>{{flag user.profile.country}} {{countryName user.profile.country}}</option>
              {{#each countriesWithFlags}}
                <option value="{{this.iso2}}">{{this.flag}} {{this.name}}</option>
              {{/each}}
            </select>
            <label for="nationalitySelect">Nationality</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <input type="text" class="form-control" id="jobInput" placeholder="Job" value="{{user.profile.job}}">
            <label for="jobInput">Job</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <input type="text" class="form-control" id="phoneInput" placeholder="Phone" value="{{user.profile.phone}}">
            <label for="phoneInput">Phone</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <select class="form-select" id="genderSelect" aria-label="Select your gender">
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="others">Others</option>
            </select>
            <label for="genderSelect">Gender</label>
          </div>
        </div>

        <div class="col-12 mb-3">
          <div class="form-floating">
            <input type="text" class="form-control" id="addressInput" placeholder="Address" value="{{user.profile.address}}">
            <label for="addressInput">Address</label>
          </div>
        </div>

        <div class="col-12 mb-3">
          <div class="form-floating">
            <textarea class="form-control" placeholder="User biography" id="biographyTextarea" style="height: 120px">{{user.profile.bio}}</textarea>
            <label for="biographyTextarea">Biography</label>
          </div>
        </div>

        <div class="col-12 d-flex justify-content-end">
          <button type="submit" class="btn btn-success">Edit Changes</button>
        </div>
      </div>
    </div>
  </div>
</form>
