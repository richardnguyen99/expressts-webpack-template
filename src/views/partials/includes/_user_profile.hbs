<div
  class="d-flex justify-content-between align-items-center mb-5 lg:exts-mb-6"
>
  {{#if (eq sessionUser.userId fetchUser.userId)}}
  <h3 class="h3 mb-0">My profile</h3>
  {{else}}
  <h3 class="h3 mb-0">{{fullname fetchUser.profile.firstName fetchUser.profile.lastName}}&apos;s profile</h3>
  {{/if}}
  <button
    class="btn btn-primary btn-sm d-flex align-items-center gap-2 d-lg-none flex-shrink-0 ms-2 bg-info"
    type="button"
    data-bs-toggle="offcanvas"
    data-bs-target="#offcanvasSidebar"
    aria-controls="offcanvasSidebar"
  >
    <i class="bi bi-box-arrow-right"></i>
    <span>Show Sidebar</span>
  </button>
</div>

<form>
  <div class="card bg-transparent p-3 rounded-2 bg-body-tertiary">
    <div class="card-header bg-transparent border-bottom p-0 pb-3">
      <h6 class="mb-0">Personal information</h6>
    </div>

    <div class="card-body px-0">
      <div class="row g-3">
        <div class="col-12 mb-3">
          <div class="input-group">
            <div class="form-floating">
              <input
                type="text"
                class="form-control"
                id="firstNameInput"
                placeholder="First name"
                value="{{ fetchUser.profile.firstName }}"
                {{#unless sessionUser}}disabled{{/unless}}
              />
              <label for="firstNameInput">First Name</label>
            </div>
            <div class="form-floating">
              <input
                type="text"
                class="form-control"
                id="lastNameInput"
                placeholder="Last name"
                value="{{ fetchUser.profile.lastName }}"
                {{#unless sessionUser}}disabled{{/unless}}
              />
              <label for="lastNameInput">Last Name</label>
            </div>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <input
              type="email"
              class="form-control"
              id="emailInput"
              placeholder="Email"
              value="{{ fetchUser.email }}"
              {{#unless sessionUser}}disabled{{/unless}}
            />
            <label for="emailInput">Email</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <input
              type="text"
              class="form-control"
              id="dobInput"
              placeholder="Date of Birth"
              value="{{date 'short' fetchUser.profile.dateOfBirth}}"
              {{#unless sessionUser}}disabled{{/unless}}
            />
            <label for="dobInput">Date of Birth</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <select
              class="form-select"
              id="nationalitySelect"
              aria-label="Select your nationality"
              {{#unless sessionUser}}disabled{{/unless}}
            >
              <option value="{{ fetchUser.profile.country }}" selected>
                {{flag fetchUser.profile.country~}}
                {{countryName fetchUser.profile.country}}
              </option>
              {{#each countriesWithFlags}}
              <option value="{{ this.iso2 }}">
                {{ this.flag }} {{ this.name }}
              </option>
              {{/each}}
            </select>
            <label for="nationalitySelect">Nationality</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <input
              type="text"
              class="form-control"
              id="jobInput"
              placeholder="Job"
              value="{{ fetchUser.profile.job }}"
              {{#unless sessionUser}}disabled{{/unless}}
            />
            <label for="jobInput">Job</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <input
              type="text"
              class="form-control "
              id="phoneInput"
              placeholder="Phone"
              value="{{ fetchUser.profile.phone }}"
              {{#unless sessionUser}}disabled{{/unless}}
            />
            <label for="phoneInput">Phone</label>
          </div>
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="form-floating">
            <select
              class="form-select"
              id="genderSelect"
              aria-label="Select your gender"
              {{#unless sessionUser}}disabled{{/unless}}
            >
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="others">Others</option>
            </select>
            <label for="genderSelect">Gender</label>
          </div>
        </div>

        <div class="col-12 mb-3">
          <div class="form-floating">
            <input
              type="text"
              class="form-control"
              id="addressInput"
              placeholder="Address"
              value="{{ fetchUser.profile.address }}"
              {{#unless sessionUser}}disabled{{/unless}}
            />
            <label for="addressInput">Address</label>
          </div>
        </div>

        <div class="col-12 mb-3">
          <div class="form-floating">
            <textarea
              class="form-control"
              placeholder="fetchUser biography"
              id="biographyTextarea"
              style="height: 120px"
              {{#unless sessionUser}}disabled{{/unless}}
            >{{fetchUser.profile.bio}}</textarea>
            <label for="biographyTextarea">Biography</label>
          </div>
        </div>

        {{#if (eq sessionUser.userId fetchUser.userId)}}
        <div class="col-12 d-flex justify-content-end">
          <button type="submit" class="btn btn-success">Edit Changes</button>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</form>
