{
  "name": "expressts-webpack-template",
  "version": "1.0.0",
  "description": "An ExpressJS + TypeScript + Webpack template",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:views": "copyfiles --error -a --up 1 \"src/views/**/*.*\" dist",
    "dev:server": "wait-on src/public/manifest.json && nodemon --config nodemon.json",
    "dev:webpack": "webpack --config webpack.config.js --mode development --watch",
    "dev": "concurrently -k -n \"SERVER,WEBPACK\" -c \"blue,magenta\" \"npm run dev:server\" \"npm run dev:webpack\"",
    "build:server": "tsc",
    "build:webpack": "webpack --config webpack.config.js --mode production",
    "build": "npm run build:server && npm run build:webpack",
    "postbuild": "npm run copy:views",
    "start": "node dist/index.js",
    "clean": "rimraf dist src/public"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-handlebars": "^8.0.1",
    "hbs": "^4.2.0",
    "jquery": "^3.7.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/nodemon": "^1.19.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.9",
    "postcss-loader": "^8.1.1",
    "rimraf": "^6.0.1",
    "sass": "^1.83.0",
    "sass-loader": "^16.0.4",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-nano": "^1.1.1"
  }
}
