{
  "name": "expressts-webpack-template",
  "version": "1.0.0",
  "description": "An ExpressJS + TypeScript + Webpack template",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:views": "copyfiles --error -a --up 1 \"src/views/**/*.*\" \"src/fake-data.json\" dist",
    "gen:data": "ts-node faker.ts",
    "dev:server": "wait-on src/public/manifest.json && cross-env NODE_ENV=development nodemon --config nodemon.json",
    "dev:webpack": "webpack --config webpack.config.js --mode development --watch",
    "dev": "concurrently -k -n \"SERVER,WEBPACK\" -c \"blue,magenta\" \"npm run dev:server\" \"npm run dev:webpack\"",
    "build:server": "tsc",
    "build:webpack": "webpack --config webpack.config.js --mode production",
    "build": "npm run build:server && npm run build:webpack",
    "postbuild": "npm run copy:views",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist src/public"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@floating-ui/dom": "^1.6.12",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "cookie-parser": "^1.4.7",
    "countries-list": "^3.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-handlebars": "^8.0.1",
    "geoip-lite": "^1.4.10",
    "hbs": "^4.2.0",
    "jquery": "^3.7.1",
    "js-cookie": "^3.0.5",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "ua-parser-js": "^2.0.0",
    "user-agents": "^1.1.404",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/geoip-lite": "^1.4.4",
    "@types/jquery": "^3.5.32",
    "@types/method-override": "^3.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "@types/nodemon": "^1.19.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "favicons": "^7.2.0",
    "favicons-webpack-plugin": "^6.0.1",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "nodemon": "^3.1.9",
    "postcss-loader": "^8.1.1",
    "randexp": "^0.5.3",
    "rimraf": "^6.0.1",
    "sass": "^1.83.0",
    "sass-loader": "^16.0.4",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-nano": "^1.1.1"
  }
}
